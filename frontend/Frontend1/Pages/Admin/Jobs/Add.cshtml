@page
@model Frontend1.Pages.Admin.Jobs.Add
@{
Layout = "~/Pages/Shared/_Layout.cshtml";
}
<script src="~/js/admin.js"></script>
<link rel="stylesheet" href="~/css/admin.css" />
<form style="color: #000; background-color: #fff; padding: 20px; border: 1px solid #000;">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" name="title" class="form-control" style="color: #000; border: 1px solid #000;" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" style="color: #000; border: 1px solid #000;"></textarea>
    </div>
    <div class="form-group">
        <label for="schedule">Schedule</label>
        <input id="schedule" name="schedule" class="form-control" style="color: #000; border: 1px solid #000;" />
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input id="location" name="location" class="form-control" style="color: #000; border: 1px solid #000;" />
    </div>
    <div class="form-group">
        <label for="postDate">Post Date</label>
        <input id="postDate" name="postDate" class="form-control" style="color: #000; border: 1px solid #000;" />
    </div>
    <div class="form-group">
        <label for="salary">Salary</label>
        <input id="salary" name="salary" class="form-control" style="color: #000; border: 1px solid #000;" />
    </div>
    <div class="form-group">
        <label for="deadline">Deadline</label>
        <input id="deadline" name="deadline" class="form-control" style="color: #000; border: 1px solid #000;" />
    </div>
    <div class="form-group">
        <label for="desiredSkills">Desired Skills</label>
        <input id="desiredSkills" name="desiredSkills" class="form-control" style="color: #000; border: 1px solid #000;" />
    </div>
    <button type="submit" class="btn btn-primary" style="background-color: #000; border: none; color: #fff;">Add Job</button>
</form>

<script src="~/js/jobs/add-job.js"></script>
