@page
@model Frontend1.Pages.Admin.Jobs.Edit
@{
Layout = "~/Pages/Shared/_Layout.cshtml";
}
<form id="update-job-form">
    <div class="form-group">
        <input type="hidden" id="_id" name="_id" />
    </div>
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" name="title" class="form-control" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="schedule">Schedule</label>
        <input id="schedule" name="schedule" class="form-control" />
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input id="location" name="location" class="form-control" />
    </div>
    <div class="form-group">
        <label for="postDate">Post Date</label>
        <input id="postDate" name="postDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label for="salary">Salary</label>
        <input id="salary" name="salary" class="form-control" />
    </div>
    <div class="form-group">
        <label for="deadline">Deadline</label>
        <input id="deadline" name="deadline" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" id="desiredSkills" name="desiredSkills" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
<p id="response-message"></p>

<script src="~/js/jobs/edit-job.js"></script>
