@page
@model Frontend1.Pages.Admin.Jobs.Remove
@{
Layout = "~/Pages/Shared/_Layout.cshtml";
}
<script src="~/js/admin.js"></script>
<link rel="stylesheet" href="~/css/admin.css" />
<h2 style="color: #000;">Are you sure you want to delete this job?</h2>

<form id="delete-job-form" style="color: #000; background-color: #fff; padding: 20px; border: 1px solid #000;">
    <div class="form-group">
        <input type="hidden" id="_id" name="_id" readonly/>
    </div>
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" name="title" class="form-control" style="color: #000; border: 1px solid #000;" readonly/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" style="color: #000; border: 1px solid #000;" readonly></textarea>
    </div>
    <div class="form-group">
        <label for="schedule">Schedule</label>
        <input id="schedule" name="schedule" class="form-control" style="color: #000; border: 1px solid #000;" readonly />
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input id="location" name="location" class="form-control" style="color: #000; border: 1px solid #000;" readonly/>
    </div>
    <div class="form-group">
        <label for="postDate">Post Date</label>
        <input id="postDate" name="postDate" type="date" class="form-control" style="color: #000; border: 1px solid #000;" readonly/>
    </div>
    <div class="form-group">
        <label for="salary">Salary</label>
        <input id="salary" name="salary" class="form-control" style="color: #000; border: 1px solid #000;" readonly/>
    </div>
    <div class="form-group">
        <label for="deadline">Deadline</label>
        <input id="deadline" name="deadline" type="date" class="form-control" style="color: #000; border: 1px solid #000;" readonly/>
    </div>
    <div class="form-group">
        <input type="hidden" id="desiredSkills" name="desiredSkills" class="form-control" />
    </div>

    <button type="submit" class="btn btn-danger" style="background-color: #000; border: none; color: #fff;">Delete</button>
    <a href="/Admin/Jobs/Index" class="btn btn-secondary" style="background-color: #000; border: none; color: #fff;">Cancel</a>
</form>

<script src="~/js/jobs/remove-job.js"></script>
