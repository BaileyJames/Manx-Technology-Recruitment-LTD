@page
@model Frontend1.Pages.Skills.Index

@{
Layout = "~/Pages/Shared/_Layout.cshtml";
}
<script src="~/js/admin.js"></script>
<link rel="stylesheet" href="~/css/admin.css" />
<div class="container mt-5" style="color: #000; background-color: #fff; padding: 20px; border: 1px solid #000;">
    <main>
        <h1>Manage Skills</h1>
        <div class="d-flex justify-content-end mb-3">
            <a class="btn btn-primary" href="/Admin/Skills/Add" style="background-color: #000; border: none; color: #fff;">Add Skill</a>
        </div>
        <table class="table" style="color: #000; border: 1px solid #000;">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody id="skills-list">
            </tbody>
        </table>
    </main>
</div>

<script src="~/js/skills/index-skill.js"></script>
