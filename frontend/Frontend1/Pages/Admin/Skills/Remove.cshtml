@page
@model Frontend1.Pages.Skills.Remove

@{
Layout = "~/Pages/Shared/_Layout.cshtml";
}
<script src="~/js/admin.js"></script>
<link rel="stylesheet" href="~/css/admin.css" />
<h2 style="color: #000;">Are you sure you want to delete this skill?</h2>

<form id="delete-skill-form" style="color: #000; background-color: #fff; padding: 20px; border: 1px solid #000;">
    <div class="form-group">
        <input type="hidden" id="_id" name="_id" readonly/>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" class="form-control" style="color: #000; border: 1px solid #000;" readonly/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" style="color: #000; border: 1px solid #000;" readonly></textarea>
    </div>

    <button type="submit" class="btn btn-danger" style="background-color: #000; border: none; color: #fff;">Delete</button>
    <a href="/Admin/Skills/Index" class="btn btn-secondary" style="background-color: #000; border: none; color: #fff;">Cancel</a>
</form>

<script src="~/js/skills/remove-skill.js"></script>
