@page
@model Frontend1.Pages.Skills.Remove

@{
Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this skill?</h2>

<form id="delete-skill-form">
    <div class="form-group">
        <input type="hidden" id="_id" name="_id" readonly/>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" readonly></textarea>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Admin/Skills/Index" class="btn btn-secondary">Cancel</a>
</form>

<script src="~/js/skills/remove-skill.js"></script>